<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
      allowedPaths="/content/teamsite/work(/.*)?"
      jcr:primaryType="cq:Template"
      jcr:title="Work Page"
      jcr:description="Page about our work or project">
    <jcr:content
        jcr:primaryType="cq:PageContent"
        jcr:title="Our Work"
        sling:resourceType="aaa/teamsite/pages/work"
        pageTitle="Our Work">
        <hero-text
            sling:resourceType="aaa/teamsite/components/work/hero-text"
            jcr:primaryType="nt:unstructured"
            text="HERO TEXT - edit me shows on exploree bubble"/>
        <hero-summary
            sling:resourceType="aaa/teamsite/components/work/hero-text"
            jcr:primaryType="nt:unstructured"
            text="HERO SUMMARY - fun blerb about the project"/>
        <sections-container
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/foundation/components/parsys">
            <section-no-title
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="aaa/teamsite/components/work/section-no-title">
                <par-content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/parsys">
                        <text
                        sling:resourceType="aaa/teamsite/components/work/text"
                        jcr:primaryType="nt:unstructured"
                        text="intro project story paragraph"/>
                </par-content>
            </section-no-title>
            <section-with-title
                jcr:primaryType="nt:unstructured"
                sling:resourceType="aaa/teamsite/components/work/section-with-title">
                <title
                    sling:resourceType="aaa/teamsite/components/work/text"
                    jcr:primaryType="nt:unstructured"
                    text="Paragraph title"/>
                <par-content
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="wcm/foundation/components/parsys">
                    <text
                        sling:resourceType="aaa/teamsite/components/work/text"
                        jcr:primaryType="nt:unstructured"
                        text="exit project story paragraph"/>
                </par-content>
            </section-with-title>
        </sections-container>
        <project-info
            jcr:primaryType="nt:unstructured"
            sling:resourceType="aaa/teamsite/components/work/project-info">
            <name
                sling:resourceType="aaa/teamsite/components/work/text"
                jcr:primaryType="nt:unstructured"
                text="project name"/>
            <description
                sling:resourceType="aaa/teamsite/components/work/text"
                jcr:primaryType="nt:unstructured"
                text="short description"/>
            <year
                sling:resourceType="aaa/teamsite/components/work/text"
                jcr:primaryType="nt:unstructured"
                text="2014"/>
            <categories
                sling:resourceType="aaa/teamsite/components/work/text"
                jcr:primaryType="nt:unstructured"
                text="Digital Publishing Suite"/>
        </project-info>
    </jcr:content>
</jcr:root>